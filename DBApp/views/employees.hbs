<!DOCTYPE html>
<html lang="en">
<head>
     <title>Employees</title>
     <link rel="stylesheet" href="../css/app.css">
</head>

<body>
<div class="navbar"> <!-- navbar -->
    <a href="/">Customers</a>
    <a href="/orders">Orders</a> 
    <a class="active" href="/employees">Employees</a>
    <a href="/menuitems">Menu</a>
    <a href="/recipes">Recipes</a>
    <a href="/inventoryitems">Inventory Items</a>
    <a href="/items_ordered">Items on Orders</a>
    <a href="/order_employees">Employees on Orders</a>
</div>
{{!-- Create a table --}}
<table id="employee-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the attributes, in order --}}
        {{#each data}}
        <tr data-value={{this.employeeID}}>
            <td>{{this.employeeID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.email}}</td>
            <td>{{this.address}}</td>
            <td>{{this.role}}</td>
            <td><button onclick="deleteEmployee({{this.employeeID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_employee.js"></script>

{{!-- Form to add a record to the table  --}}
<h2>Add a New Employee</h2>
<p>To add a new employee, please enter their information below and click 'Submit'!</p>
<form id="add-employee-form-ajax">
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">
    
    <label for="input-phone">Phone Number: </label>
    <input type="text" name="input-phone" id="input-phone">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-address">Address: </label>
    <input type="text" name="input-address" id="input-address">

    <label for="input-role">Role: </label>
    <input type="text" name="input-role" id="input-role">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_employee.js"></script>

<h2>Update an Employee Form</h2>
<form id="update-employee-form-ajax">

    <label for="input-employee">Employee: </label>
    <select name="input-employee" id="mySelect">
        <option value="test">Select an Employee</option>
        {{#each data}}
        <option value="{{this.employeeID}}">{{this.name}}</option>
        {{/each}}
    </select>
    <br>
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name1">
    
    <label for="input-phone">Phone Number: </label>
    <input type="text" name="input-phone" id="input-phone1">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email1">

    <label for="input-address">Address: </label>
    <input type="text" name="input-address" id="input-address1">

    <label for="input-role">Role: </label>
    <input type="text" name="input-role" id="input-role1">

    <input type="submit">

</form>

<script src="./js/update_employee.js"></script>
</body>
</html>
